<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission
        android:name="android.permission.NEARBY_WIFI_DEVICES"
        android:usesPermissionFlags="neverForLocation" />

    <application
        android:name=".utils.HomeSystemApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeSystem"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".activities.dashboard.sensors.SensorsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.dashboard.central_units.CentralUnitsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.add_device.DeviceSuccessActivity"
            android:exported="false" />
        <activity
            android:name=".activities.add_device.DeviceSetupActivity"
            android:exported="false" />
        <activity
            android:name=".activities.add_device.DeviceConnectActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.add_device.WiFiConfigActivity"
            android:exported="false" />
        <activity
            android:name=".activities.dashboard.DashboardActivity"
            android:exported="false" />
        <activity
            android:name=".activities.forgot_password.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".activities.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.login.MainActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Firebase Messaging Service -->
        <service
            android:name=".services.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service> <!-- MQTT Service for Paho Android Client -->
        <service
            android:name="org.eclipse.paho.android.service.MqttService"
            android:exported="false" /> <!-- Firebase metadata -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/icon" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/design_default_color_primary" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="home_system_notifications" />
    </application>

</manifest>