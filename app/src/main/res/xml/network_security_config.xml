<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic to ESP32 AP mode IP -->
        <domain includeSubdomains="false">192.168.4.1</domain>
        <!-- Allow cleartext traffic to common ESP32 AP range -->
        <domain includeSubdomains="true">192.168.4.0/24</domain>
        <!-- Allow cleartext traffic to local network ranges -->
        <domain includeSubdomains="true">192.168.1.0/24</domain>
        <domain includeSubdomains="true">10.0.0.0/8</domain>
        <!-- For development/testing localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>

    <!-- For all other domains, use secure connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>