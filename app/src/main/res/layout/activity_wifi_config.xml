<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:padding="16dp">

    <!-- Back Button - Top Left -->
    <ImageView
        android:id="@+id/wifi_config_btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/cancel"
        app:tint="#3B82F6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Step Indicator - Top Right -->
    <TextView
        android:id="@+id/wifi_config_tvStepIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step_2_of_4"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Title - Center -->
    <TextView
        android:id="@+id/wifi_config_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add_new_device"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/wifi_config_btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Subtitle - Below Title -->
    <TextView
        android:id="@+id/wifi_config_tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/follow_the_steps_to_set_up_your_device"
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/wifi_config_tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/wifi_config_contentCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/wifi_config_tvSubtitle"
        app:layout_constraintBottom_toTopOf="@+id/wifi_config_btnNext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- WiFi Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_wifi"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_background_blue"
                    android:padding="12dp"
                    app:tint="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Main Heading -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/enter_wifi_credentials"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:gravity="center"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginBottom="6dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/your_device_will_use_this_wifi_network_to_connect_to_the_internet"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:gravity="center"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginBottom="16dp" />

                <!-- Auto Detect Button -->
                <Button
                    android:id="@+id/wifi_config_btnDetectWifi"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="@string/auto_detect_wifi"
                    android:textSize="12sp"
                    android:textColor="#3B82F6"
                    android:background="@drawable/button_outline"
                    android:layout_marginBottom="16dp"
                    android:paddingHorizontal="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:minWidth="0dp" />

                <!-- WiFi SSID Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:boxStrokeColor="#3B82F6"
                    app:hintTextColor="#3B82F6">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/wifi_config_etWifiSSID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/wifi_network_name_ssid"
                        android:inputType="text"
                        android:drawableStart="@drawable/ic_wifi"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:textColor="#1F2937"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- WiFi Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="#3B82F6"
                    app:hintTextColor="#3B82F6"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/wifi_config_etWifiPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/wifi_password"
                        android:inputType="textPassword"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="8dp"
                        android:padding="12dp"
                        android:textColor="#1F2937"
                        android:textSize="15sp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Next Button -->
    <Button
        android:id="@+id/wifi_config_btnNext"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/next"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>