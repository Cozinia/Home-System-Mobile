<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:padding="16dp">

    <!-- Back Button - Top Left -->
    <ImageView
        android:id="@+id/device_success_btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Back"
        app:tint="#3B82F6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Step Indicator - Top Right -->
    <TextView
        android:id="@+id/device_success_tvStepIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complete"
        android:textSize="12sp"
        android:textColor="#10B981"
        android:background="@drawable/step_indicator_success"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Title - Center -->
    <TextView
        android:id="@+id/device_success_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Device Added Successfully!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/device_success_btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Subtitle - Below Title -->
    <TextView
        android:id="@+id/device_success_tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your device has been successfully configured and added to your system"
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/device_success_tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/device_success_contentCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/device_success_tvSubtitle"
        app:layout_constraintBottom_toTopOf="@+id/device_success_btnFinish"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- Success Animation Container -->
                <androidx.cardview.widget.CardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="12dp"
                    app:cardBackgroundColor="#10B981"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/device_success_ivSuccess"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_check_circle"
                        android:padding="6dp"
                        android:layout_gravity="center"
                        app:tint="@android:color/white" />
                </androidx.cardview.widget.CardView>

                <!-- Success Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Setup Complete!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp" />

                <!-- Success Message -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your device has been successfully configured and is now ready to use."
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:gravity="center"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginBottom="16dp" />

                <!-- Device Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#F0FDF4"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Device Information"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#166534"
                            android:layout_marginBottom="8dp" />

                        <!-- Device Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Device Name:"
                                android:textSize="11sp"
                                android:textColor="#166534" />

                            <TextView
                                android:id="@+id/device_success_tvDeviceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SafeHome Device"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>

                        <!-- Connection Status -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Status:"
                                android:textSize="11sp"
                                android:textColor="#166534" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <View
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:background="@drawable/decorative_circle_green"
                                    android:layout_marginEnd="3dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Connected"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:textColor="#10B981" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- WiFi Network -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="WiFi Network:"
                                android:textSize="11sp"
                                android:textColor="#166534" />

                            <TextView
                                android:id="@+id/device_success_tvWifiNetwork"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="WiFi Connected"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- What's Next Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F8FAFC">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="What you can do now:"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓"
                                android:textSize="12sp"
                                android:textColor="#10B981"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Monitor device status from dashboard"
                                android:textSize="11sp"
                                android:textColor="#4B5563"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓"
                                android:textSize="12sp"
                                android:textColor="#10B981"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Arm/Disarm your security system"
                                android:textSize="11sp"
                                android:textColor="#4B5563"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✓"
                                android:textSize="12sp"
                                android:textColor="#10B981"
                                android:textStyle="bold"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Add more sensors and devices"
                                android:textSize="11sp"
                                android:textColor="#4B5563"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Finish Button -->
    <Button
        android:id="@+id/device_success_btnFinish"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="What's Next?"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/modern_button_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>