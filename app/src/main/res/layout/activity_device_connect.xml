<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:padding="16dp">

    <!-- Back Button - Top Left -->
    <ImageView
        android:id="@+id/device_connect_btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/cancel"
        app:tint="#3B82F6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Step Indicator - Top Right -->
    <TextView
        android:id="@+id/device_connect_tvStepIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step_3_of_4"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Title - Center -->
    <TextView
        android:id="@+id/device_connect_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/connect_to_device_wifi"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/device_connect_btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Subtitle - Below Title -->
    <TextView
        android:id="@+id/device_connect_tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/now_connect_your_phone_to_the_device_s_wifi_network"
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/device_connect_tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/device_connect_contentCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/device_connect_tvSubtitle"
        app:layout_constraintBottom_toTopOf="@+id/device_connect_bottomButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- WiFi Icon -->
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_wifi"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_background_orange"
                    android:padding="12dp"
                    app:tint="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <!-- Title Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_to_device_network"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="6dp" />

                <!-- Instruction Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/now_connect_your_phone_to_the_device_s_wifi_network"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="16dp" />

                <!-- Network Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FEF3C7"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="14dp">

                        <!-- Network Name Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/network"
                                android:textSize="11sp"
                                android:textColor="#92400E"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/device_connect_tvNetworkName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/safehome_xxx"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937"
                                android:background="?android:attr/selectableItemBackground"
                                android:padding="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="2dp"
                            android:layout_height="40dp"
                            android:background="#D97706"
                            android:layout_marginHorizontal="8dp" />

                        <!-- Password Section -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/password"
                                android:textSize="11sp"
                                android:textColor="#92400E"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/device_connect_tvNetworkPassword"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/s_fehom3"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1F2937"
                                android:background="?android:attr/selectableItemBackground"
                                android:padding="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:maxLines="1"
                                android:ellipsize="end" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- NEW: WiFi Settings Button -->
                <Button
                    android:id="@+id/device_connect_btnOpenWifiSettings"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/open_wifi_settings"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/modern_button_primary"
                    android:drawableStart="@drawable/ic_wifi"
                    android:drawablePadding="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"
                    app:drawableTint="@android:color/white" />

                <!-- Instructions -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F3F4F6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/instructions"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/connection_instructions"
                            android:textSize="12sp"
                            android:textColor="#4B5563"
                            android:lineSpacingExtra="1dp"
                            android:maxLines="4"
                            android:ellipsize="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/device_connect_bottomButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/device_connect_btnPrevious"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="6dp"
            android:text="@string/previous"
            android:textColor="#3B82F6"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_outline"
            android:maxLines="1"
            android:ellipsize="end" />

        <Button
            android:id="@+id/device_connect_btnNext"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="6dp"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/button_primary"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>