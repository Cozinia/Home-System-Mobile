<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:padding="16dp">

    <!-- Back Button - Top Left (disabled) -->
    <ImageView
        android:id="@+id/device_setup_btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:clickable="false"
        android:focusable="false"
        android:contentDescription="@string/cancel"
        app:tint="#9CA3AF"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Step Indicator - Top Right -->
    <TextView
        android:id="@+id/device_setup_tvStepIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step_4_of_4"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Title - Center -->
    <TextView
        android:id="@+id/device_setup_tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/configuring_device"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/device_setup_btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Subtitle - Below Title -->
    <TextView
        android:id="@+id/device_setup_tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/please_wait_while_we_set_up_your_device_with_the_wifi_credentials"
        android:textSize="13sp"
        android:textColor="#6B7280"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/device_setup_tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <!-- Main Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/device_setup_contentCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/device_setup_tvSubtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Animated Setup Icon -->
                <androidx.cardview.widget.CardView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    app:cardCornerRadius="36dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#10B981"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/device_setup_ivIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_settings_sync"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        app:tint="@android:color/white" />
                </androidx.cardview.widget.CardView>

                <!-- Main Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/configuring_device"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:gravity="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp" />

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_wait_while_we_set_up_your_device_with_the_wifi_credentials"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:gravity="center"
                    android:lineSpacingExtra="1dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:layout_marginBottom="20dp" />

                <!-- Progress Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Progress Label -->
                    <TextView
                        android:id="@+id/device_setup_tvProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_up"
                        android:textSize="13sp"
                        android:textColor="#4B5563"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />

                    <!-- Progress Bar Container -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F3F4F6"
                        android:layout_marginBottom="6dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <ProgressBar
                                android:id="@+id/device_setup_progressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:progressTint="#3B82F6"
                                android:progressBackgroundTint="#E5E7EB"
                                android:progress="0"
                                android:max="100" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Progress Percentage -->
                    <TextView
                        android:id="@+id/device_setup_tvProgressPercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="11sp"
                        android:textColor="#6B7280"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Setup Steps Info -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#F0F9FF"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_up"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textColor="#1E40AF"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/device_setup_tvCurrentStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/setting_up"
                            android:textSize="11sp"
                            android:textColor="#1E40AF"
                            android:lineSpacingExtra="1dp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Spacer for better distribution -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Warning Message -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#FEF3C7"
                    android:padding="10dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        app:tint="#D97706"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/please_wait_while_we_set_up_your_device_with_the_wifi_credentials"
                        android:textSize="11sp"
                        android:textColor="#92400E"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>